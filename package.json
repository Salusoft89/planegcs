{
	"name": "planegcs-wrapper",
	"version": "0.0.1",
	"private": true,
	"main": "index.ts",
	"scripts": {
		"gcs:update": "cd ./planegcs && ./update_freecad.sh",
		"gcs:bindings": "cd ./planegcs/build_bindings && ./process_all.sh",
		"build:emsc": "docker run --rm -v $(pwd)/planegcs:/src gcs_builder sh -c 'cmake . && make -j $(nproc)'",
		"build:emsc-release": "docker run --rm -v $(pwd)/planegcs:/src gcs_builder sh -c 'cmake . -DCMAKE_BUILD_TYPE=Release && make -j $(nproc) && ls -lh bin'",
		"build:docker": "docker build -t gcs_builder .",
		"build": "npm run build:docker && npm run build:emsc",
		"test": "jest",
		"testc": "jest --coverage"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.20.2",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.14.6",
		"@types/nunjucks": "^3.2.2",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"babel-plugin-transform-import-meta": "^2.2.0",
		"eslint": "^8.35.0",
		"jest": "^29.4.2",
		"nunjucks": "^3.2.3",
		"tree-sitter": "^0.20.1",
		"tree-sitter-cpp": "^0.20.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
}
