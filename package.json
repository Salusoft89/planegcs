{
	"name": "planegcs",
	"description": "A wasm build and a simple wrapper of the FreeCAD PlaneGCS (2D geometric solver)",
	"keywords": [
		"wasm",
		"freecad",
		"gemetric",
		"solver",
		"2d",
		"plane",
		"geometry",
		"constraint"
	],
	"homepage": "https://github.com/thes01/planegcs-wrapper",
	"bugs": {
		"url": "https://github.com/thes01/planegcs-wrapper/issues",
		"email": "miroslav.sery@salusoft89.cz"
	},
	"repository": "github:thes01/planegcs-wrapper",
	"license": "GPL-2.0-only",
	"version": "0.1.0",
	"private": false,
	"main": "index.ts",
	"files": [
		"dist",
		"sketch",
		"index.ts"
	],
	"scripts": {
		"gcs:update": "cd ./planegcs && ./update_freecad.sh",
		"gcs:bindings": "cd build-bindings && ./process_all.sh",
		"build:emsc": "docker run --rm -v $(pwd)/planegcs:/src gcs_builder sh -c 'emcmake cmake . -DCMAKE_BUILD_TYPE=Debug && emmake make -j $(nproc)' && cp planegcs/bin/* dist",
		"build:emsc-release": "docker run --rm -v $(pwd)/planegcs:/src gcs_builder sh -c 'emcmake cmake . -DCMAKE_BUILD_TYPE=Release && emmake make -j $(nproc) && ls -lh bin' && cp planegcs/bin/* dist",
		"build:docker": "docker build -t gcs_builder .",
		"build": "npm run build:docker && npm run build:emsc",
		"test": "jest",
		"test:basic": "jest -t 'basic:'",
		"testc": "jest --coverage"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.20.2",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.14.6",
		"@types/nunjucks": "^3.2.2",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"babel-plugin-transform-import-meta": "^2.2.0",
		"eslint": "^8.35.0",
		"jest": "^29.4.2",
		"nunjucks": "^3.2.3",
		"tree-sitter": "^0.20.1",
		"tree-sitter-cpp": "^0.20.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"vite": "^4.1.4",
		"vite-plugin-wasm": "^3.2.2",
		"vitest": "^0.29.2"
	}
}
