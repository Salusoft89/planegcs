export const constraint_param_index = {
{%- for constraint in fn_constraints %}
    {{ constraint.constraint_type }}: {
        {%- for param in constraint.non_opt_params -%}
            {% if param.type == 'double*' %}
            {{ param.identifier }}: 'object_param_or_number',
            {%- elif param.type in ['double', 'int', 'bool'] or param.is_enum %}
            {{ param.identifier }}: 'primitive',
            {%- else %} {# object (Line, Parabola, Point, ...) #}
            {{ param.identifier | replace('&', '') }}_id: 'object_id', 
            {%- endif %}
        {%- endfor %}
    },
{%- endfor %}
}
